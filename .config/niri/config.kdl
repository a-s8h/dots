input {
    keyboard {
        xkb {
	    layout "us, ru"
            options "grp:alt_shift_toggle,ctrl:nocaps"
        }
    }

    mouse {
        accel-speed 0.2
    }

}

output "HDMI-A-3" {
    mode "3840x2160@60.000"
    scale 2
    transform "normal"
    position x=1920 y=0
}

/*
██╗      █████╗ ██╗   ██╗ ██████╗ ██╗   ██╗████████╗
██║     ██╔══██╗╚██╗ ██╔╝██╔═══██╗██║   ██║╚══██╔══╝
██║     ███████║ ╚████╔╝ ██║   ██║██║   ██║   ██║
██║     ██╔══██║  ╚██╔╝  ██║   ██║██║   ██║   ██║
███████╗██║  ██║   ██║   ╚██████╔╝╚██████╔╝   ██║
╚══════╝╚═╝  ╚═╝   ╚═╝    ╚═════╝  ╚═════╝    ╚═╝
*/
layout {
    gaps 5 
    center-focused-column "never"

    preset-column-widths {
        proportion 0.25
        proportion 0.5
        proportion 0.75
        proportion 1.0
    }

    preset-window-heights {
        proportion 0.2
        proportion 0.4
        proportion 0.5
        proportion 0.6
        proportion 0.8
    }

    default-column-width { 
        proportion 0.5
    }


    focus-ring {
        width 1
        active-color "#d7827e"
        inactive-color "#9893a5"
    }

    border {
        off
    }

    shadow {
        on
	    softness 20
	    spread 7
	    offset x=-1 y=-5
        color "#0009"
    }

    struts {
    }
}

workspace "1"
workspace "2"
workspace "3"
workspace "4"
workspace "5"
workspace "6"
workspace "7"
workspace "8"
workspace "9"

